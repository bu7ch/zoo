{% extends 'base.html.twig' %}

{% block title %}Hello FamilleController!{% endblock %}

{% block monTitre %}Voici la liste des familles :{% endblock %}
{% block body %}

{% for famille in familles %}
  <h2 class="border-bottom border-primary"><a href="{{path('display_famille', {'id' : famille.id})}}"> {{ famille.libelle | capitalize}}</a></h2>
  <div>{{ famille.description}}</div>
  <div class="row">
    {% for animal in famille.animaux %}
      <div class="col-6">
        <div class="row align-items-center">
          <div class="col-12 col-md-6 col-lg-2 text-center">
            <img src="{{asset("images/#{animal.image}")}}" alt="" class="img-fluid">
          </div>
          <div class="col-auto">
            <h2> <a href="{{path('display_animal', {'id': animal.id})}}">{{ animal.nom }}</h2></a>
            <div>{{ animal.description}}</div>
            <div><a href="" class="btn btn-primary">{{ animal.famille.libelle}}</a></div>
          </div>
        </div>
    </div>
    {% endfor %}
  </div>
{% endfor %}

{% endblock %}
