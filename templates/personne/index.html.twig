{% extends 'base.html.twig' %}

{% block title %}Hello PersonneController!{% endblock %}
{% block monTitre %}Voici la liste des personnes :{% endblock %}
{% block body %}
{% for personne in personnes %}
  <h2 class="border-bottom border-primary"><a href="">{{personne.nom}}</a></h2>
  <h3>Liste des animaux possédés : </h3>
    {% for dispose in personne.dispose %}
        <div class="row align-items-center">
          <div class="col-2">
            <img src="{{asset("images/{dispose.animaux.image}")}}" class="img-fluid" alt="">
          </div>
          <div class="col">
          <h2><a href="{{path('display_animal', {'id': dispose.animaux.id})}}">{{dispose.animaux.nom}}</a></h2>
          <div>nombres : {{dispose.nbre}}</div>
          </div>
        </div>
    {% endfor %}
{% endfor %}
{% endblock %}
