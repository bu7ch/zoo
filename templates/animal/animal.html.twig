{% extends 'base.html.twig' %}

{% block title %} Page d'un animal {% endblock %}

{% block monTitre %}Voici l'animal {{animal.nom}} :{% endblock %}
{% block body %}
<div class="col-2 align-items-center">
  <div class="col-2 text-center">
    <img src="{{asset("images/#{animal.image}")}}" alt="" class="img-fuild">
  </div>
  <div class="col">
  <div>{{animal.description}}</div>
  <div>Poids moyen : {{animal.poids}}</div>
  <div> dangereux : {{ animal.dangereux ? '<span class="badge bg-danger"> OUI </span>' : '<span class="badge bg-success">NON</span>'}}</div>
  </div>
  <div>
    Pr√©sence de l'animal sur les continents :
    {% for continent in animal.continents %}
      <a href="{{path("display_continent", {'id': continent.id})}}" class="btn btn-warning"> {{ continent.libelle }}</a>
    {% endfor %}
    </div>
</div>
{% endblock %}